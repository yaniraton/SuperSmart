<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SuperSmart"
        tools:targetApi="31">
        <activity
            android:name=".AdminProduceMappingActivity"
            android:exported="false" />
        <activity
            android:name=".ImportCSVActivity"
            android:exported="false" />
        <activity
            android:name=".AdminImageApprovalActivity"
            android:exported="false" />
        <activity
            android:name=".SuggestImageActivity"
            android:exported="false" />
        <activity
            android:name=".AdminApprovalActivity"
            android:exported="false" />
        <activity
            android:name=".BarcodeScan"
            android:exported="false" />
        <activity
            android:name=".FilterAndEdit"
            android:exported="false" />
        <activity
            android:name=".ImportProducts"
            android:exported="false" />
        <activity
            android:name=".EditItem"
            android:exported="false" />

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity
            android:name=".signup_screen"
            android:exported="false" />
        <activity
            android:name=".login_screen"
            android:exported="false" />
        <activity
            android:name=".EmployeeManagementScreen"
            android:exported="false" />
        <activity
            android:name=".product_screen"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.yanir.supersmart.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>